---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import {
  FULL_NAME,
  TAGLINE,
  TAGLINE_SUB,
  SOCIALS,
  ABOUT,
  EXPERIENCE,
  EDUCATION,
  PROJECTS,
  SKILLS,
} from "../resume_details";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="bg-white text-gray-900 dark:bg-zinc-950 dark:text-zinc-300 relative"
  >
    <div
      id="cursor-glow"
      class="fixed inset-0 pointer-events-none z-0 transition-opacity duration-300 opacity-0"
      style="background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(20, 184, 166, 0.08), transparent 40%);"
    >
    </div>

    <div class="relative z-10">
      <Header />
      <main class="max-w-4xl mx-auto px-4 py-12">
        
        <section
          class="mb-20 text-center animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out"
        >
          <p
            class="font-bold text-teal-600 dark:text-teal-400 text-sm tracking-wide uppercase mb-4"
          >
            Personal Portfolio
          </p>
          <h1
            class="font-bold text-5xl md:text-6xl tracking-tight mb-6 text-gray-900 dark:text-white"
          >
            {FULL_NAME}
          </h1>
          <p
            class="text-xl text-gray-600 dark:text-zinc-400 max-w-2xl mx-auto mb-8"
          >
            {TAGLINE}<br />
            {TAGLINE_SUB}
          </p>
          <div class="flex justify-center gap-4">
            <a
              href={SOCIALS.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="px-6 py-3 bg-teal-600 !text-white font-semibold rounded-lg hover:bg-teal-700 transition shadow-lg shadow-teal-500/20"
            >
              Contact Me
            </a>
            <a
              href="#resume"
              class="px-6 py-3 border border-gray-300 dark:border-zinc-700 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-zinc-900 transition text-gray-900 dark:text-white"
            >
              View Resume
            </a>
          </div>
        </section>

        <section
          id="about"
          class="mb-24 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out delay-100"
        >
          <div
            class="bg-teal-50 dark:bg-zinc-900/50 border border-teal-100 dark:border-teal-900/30 rounded-2xl p-8 md:p-12 hover:border-teal-500/50 hover:shadow-xl hover:shadow-teal-500/5"
          >
            <h2 class="font-bold text-3xl mb-6 text-gray-900 dark:text-white">
              About Me
            </h2>
            {
              ABOUT.map((paragraph, index) => (
                <p class={`text-lg leading-relaxed ${index !== ABOUT.length - 1 ? "mb-6" : ""}`}>
                  {paragraph}
                </p>
              ))
            }
          </div>
        </section>

        <section
          id="resume"
          class="mb-24 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out delay-200"
        >
          <h2
            class="font-bold text-3xl mb-8 text-gray-900 dark:text-white flex items-center gap-3"
          >
            Experience
          </h2>

          <div class="flex flex-col">
            {
              EXPERIENCE.map((job) => (
                <div class="flex group">
                  <div class="flex flex-col items-center mr-4 md:mr-6">
                    <div class="flex items-center justify-center w-10 h-10 rounded-full border-2 border-teal-600 bg-white dark:bg-zinc-950 shrink-0 z-10 shadow-sm">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 text-teal-600 dark:text-teal-400"
                        viewBox="0 0 512 512"
                        stroke="currentColor"
                      >
                        <path
                          fill="currentColor"
                          d="M192 56l0 40 128 0 0-40c0-4.4-3.6-8-8-8L200 48c-4.4 0-8 3.6-8 8zM144 96l0-40c0-30.9 25.1-56 56-56L312 0c30.9 0 56 25.1 56 56l0 40 80 0c35.3 0 64 28.7 64 64l0 256c0 35.3-28.7 64-64 64L64 480c-35.3 0-64-28.7-64-64L0 160c0-35.3 28.7-64 64-64l80 0zM48 304l0 112c0 8.8 7.2 16 16 16l384 0c8.8 0 16-7.2 16-16l0-112-144 0 0 16c0 17.7-14.3 32-32 32l-64 0c-17.7 0-32-14.3-32-32l0-16-144 0zm144-48l272 0 0-96c0-8.8-7.2-16-16-16L64 144c-8.8 0-16 7.2-16 16l0 96 144 0z"
                        />
                      </svg>
                    </div>
                    <div class="w-px h-full bg-gray-300 dark:bg-zinc-800 my-2" />
                  </div>
                  <div class="pb-12">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">
                      {job.title}
                    </h3>
                    <div class="text-teal-600 dark:text-teal-400 font-medium mb-2">
                      {job.company} | {job.location} {job.date && `| ${job.date}`}
                    </div>
                    <p class="text-gray-600 dark:text-zinc-400 max-w-2xl text-lg">
                      {job.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>
        </section>

        <section
          class="mb-24 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out delay-200"
        >
          <h2
            class="font-bold text-3xl mb-12 text-gray-900 dark:text-white flex items-center gap-3"
          >
            Education
          </h2>
          {
            EDUCATION.map((edu) => (
              <div class="flex group">
                <div class="flex flex-col items-center mr-4 md:mr-6">
                  <div class="flex items-center justify-center w-10 h-10 rounded-full border-2 border-teal-600 bg-white dark:bg-zinc-950 shrink-0 z-10 shadow-sm">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-5 h-5 text-teal-600 dark:text-teal-400"
                      viewBox="0 0 576 512"
                      stroke="currentColor"
                    >
                      <path
                        fill="currentColor"
                        d="M318.8 38.1C309 34.1 298.6 32 288 32s-21 2.1-30.8 6.1L14.8 137.9C5.8 141.6 0 150.3 0 160L0 456c0 13.3 10.7 24 24 24s24-10.7 24-24l0-260.2 48 19.8 0 168.5c0 53 86 96 192 96s192-43 192-96l0-168.5 81.2-33.4c9-3.7 14.8-12.4 14.8-22.1s-5.8-18.4-14.8-22.1L318.8 38.1zM144 384l0-148.7 113.2 46.6c9.8 4 20.2 6.1 30.8 6.1s21-2.1 30.8-6.1L432 235.3 432 384c0 .1 0 .1 0 .3s-.1 .4-.3 .9c-.4 .9-1.3 2.7-3.4 5.2-4.4 5.2-12.6 11.9-26 18.6-26.8 13.4-67.1 23-114.3 23s-87.5-9.7-114.3-23c-13.4-6.7-21.6-13.4-26-18.6-2.1-2.5-3-4.3-3.4-5.2-.2-.5-.3-.8-.3-.9s0-.2 0-.3zM87.2 160L275.5 82.5c4-1.6 8.2-2.5 12.5-2.5s8.5 .8 12.5 2.5L488.8 160 300.5 237.5c-4 1.6-8.2 2.5-12.5 2.5s-8.5-.8-12.5-2.5L87.2 160z"
                      />
                    </svg>
                  </div>
                  <div class="w-px h-full bg-gray-300 dark:bg-zinc-800 my-2" />
                </div>
                <div class="pb-12">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">
                    {edu.degree}
                  </h3>
                  <div class="text-teal-600 dark:text-teal-400 font-medium mb-2">
                    {edu.school} | {edu.location} | {edu.date}
                  </div>
                  <p class="text-gray-600 dark:text-zinc-400 max-w-2xl text-lg">
                    {edu.details}
                  </p>
                </div>
              </div>
            ))
          }
        </section>

         <section
          class="mb-24 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out delay-300"
        >
          <h2 class="font-bold text-3xl mb-8 text-gray-900 dark:text-white">
            Technical Skills
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {
              SKILLS.map((skill) => (
                <div class="flex items-center space-x-2 bg-gray-50 dark:bg-zinc-900 p-3 rounded-lg border border-gray-100 dark:border-zinc-800 hover:border-teal-500/50 hover:shadow-xl hover:shadow-teal-500/5">
                  <svg
                    class="w-5 h-5 text-teal-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="font-medium">{skill}</span>
                </div>
              ))
            }
          </div>
        </section>

        {
          PROJECTS && PROJECTS.length > 0 && (
            <section
              id="portfolio"
              class="mb-24 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out delay-300"
            >
              <h2 class="font-bold text-3xl mb-12 text-gray-900 dark:text-white">
                Selected Projects
              </h2>

              <div class="grid md:grid-cols-2 gap-8">
                {PROJECTS.map((project) => (
                  <div class="border border-gray-200 dark:border-zinc-800 rounded-xl p-6 hover:border-teal-500/50 hover:shadow-xl hover:shadow-teal-500/5 transition bg-white dark:bg-zinc-900/50">
                    <h3 class="font-bold text-xl mb-2 text-gray-900 dark:text-white">
                      {project.title}
                    </h3>
                    <p class="text-sm text-teal-600 dark:text-teal-400 mb-4 uppercase tracking-tighter font-semibold">
                      {project.tags}
                    </p>
                    <p
                      class="text-gray-600 dark:text-zinc-400 mb-4"
                      set:html={project.description}
                    />
                  </div>
                ))}
              </div>
            </section>
          )
        }
      </main>
      <Footer />
    </div>

    <script>
      // Cursor Glow Logic
      const glow = document.getElementById("cursor-glow");
      if (glow) {
        document.addEventListener("mousemove", (e) => {
          requestAnimationFrame(() => {
            glow.style.setProperty("--mouse-x", `${e.clientX}px`);
            glow.style.setProperty("--mouse-y", `${e.clientY}px`);
            if (glow.style.opacity !== "1") {
              glow.style.opacity = "1";
            }
          });
        });
      }

      // Scroll Animation Logic
      const observerOptions = {
        root: null,
        rootMargin: "0px",
        threshold: 0.1,
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.remove("opacity-0", "translate-y-8");
            entry.target.classList.add("opacity-100", "translate-y-0");
          } else {
            entry.target.classList.remove("opacity-100", "translate-y-0");
            entry.target.classList.add("opacity-0", "translate-y-8");
          }
        });
      }, observerOptions);

      document.addEventListener("DOMContentLoaded", () => {
        const elements = document.querySelectorAll(".animate-on-scroll");
        elements.forEach((el) => observer.observe(el));
      });
    </script>
  </body>
</html>